{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "dist",
        "module": "ESNext",
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "watchOptions": {
        "excludeDirectories": [
            "node_modules"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json",
    ],
    "exclude": [
        "./dist/**/*",
        "./node_modules/**/*"
    ]
}