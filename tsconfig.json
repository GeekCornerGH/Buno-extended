{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ES2022",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "outDir": "dist",
        "module": "ESNext",
        "skipLibCheck": true,
        "types": ["node"],
    },
    "watchOptions": { "excludeDirectories": ["node_modules"] },
    "include": ["./src/**/*.ts", "./typings/**/*.d.ts"],
    "exclude": ["./dist/**/*", "./node_modules/**/*"]
}
