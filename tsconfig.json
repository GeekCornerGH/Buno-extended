{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ES2022",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "outDir": "dist",
        "module": "ESNext",
        "skipLibCheck": true
    },
    "watchOptions": { "excludeDirectories": ["node_modules"] },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/database/**/*", "./dist/**/*", "./node_modules/**/*"]
}
